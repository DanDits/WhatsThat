<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Local copy of android:Theme.Holo.Dialog.Alert -->
    <style name="Theme_Holo_Dialog_Alert" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowTitleStyle">@style/DialogWindowTitle_Holo</item>
        <item name="android:borderlessButtonStyle">@style/DialogButtonBorderless</item>
    </style>

    <style name="DialogButtonBorderless" parent="@android:style/Widget.Holo.Button.Borderless">
        <item name="android:background">@drawable/dialog_button_alien</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAppearance">@style/TextAppearance.Alien.DialogButton</item>
    </style>

    <style name="TextAppearance.Alien.DialogButton" parent="@android:style/TextAppearance.Holo.Medium">
    </style>

    <style name="Alien.ButtonBar.AlertDialog" parent="@android:style/Holo.ButtonBar.AlertDialog">
        <item name="android:background">@android:color/holo_purple</item>
    </style>

    <!-- Local copy of android:DialogWindowTitle.Holo -->
    <style name="DialogWindowTitle_Holo">
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textAppearance">@style/DialogWindowTitleText_Holo</item>
    </style>

    <style name="DialogWindowTitleText_Holo">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/dialog_title_text</item>
    </style>

</resources>