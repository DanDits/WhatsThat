<resources>
    <attr name="numberColor" format="color" />
    <attr name="numberSize" format="dimension" />
    <attr name="numberBold" format="boolean" />

    <declare-styleable name="ImageViewWithText">
        <attr name="text" format="string"/>
        <attr name="textColor" format="color"/>
        <attr name="textSize" format="dimension"/>
        <attr name="textBold" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="ImageViewWithNumber">
        <attr name="numberColor" />
        <attr name="numberSize" />
        <attr name="numberBold" />
    </declare-styleable>

    <declare-styleable name="ImageButtonWithNumber">
        <attr name="numberColor" />
        <attr name="numberSize" />
        <attr name="numberBold" />
    </declare-styleable>

    <declare-styleable name="LinearLayoutProgressBar">
        <attr name="startColor" format="color"/>
        <attr name="endColor" format="color"/>
    </declare-styleable>
</resources>
