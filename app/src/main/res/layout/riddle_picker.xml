<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/riddle_types_dialog_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAppearance="@android:style/TextAppearance.Holo.Large"
        android:textColor="@color/important"
        android:text="@string/riddle_dialog_title"
        android:id="@+id/title"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/title"
        android:textAppearance="@android:style/TextAppearance.Holo.Small"
        android:textColor="#ff4d00"
        android:text="@string/riddle_dialog_subtitle"
        android:id="@+id/subtitle"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/subtitle"
        android:id="@+id/unsolved_and_types_container">

    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/unsolved_and_types_container"
        android:layout_centerHorizontal="true"
        android:background="@drawable/dialog_button_alien_solid"
        android:id="@+id/confirm"/>

</RelativeLayout>
</ScrollView>