<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Non focused states -->
    <item android:state_focused="false" android:state_selected="false" android:state_pressed="false" android:drawable="@drawable/tab_unselected_alien" />
    <item android:state_focused="false" android:state_selected="true" android:state_pressed="false" android:drawable="@drawable/tab_selected_alien" />

    <!-- Pressed -->
    <item android:state_pressed="true" android:state_selected="true" android:drawable="@drawable/tab_selected_pressed_alien" />
    <item android:state_pressed="true" android:state_selected="false" android:drawable="@drawable/tab_unselected_pressed_alien" />

    <!-- Only focused -->
    <item android:state_pressed="false" android:state_selected="true" android:state_focused="true" android:drawable="@drawable/tab_selected_focused_alien" />
    <item android:state_pressed="false" android:state_selected="false" android:state_focused="true" android:drawable="@drawable/tab_unselected_focused_alien" />
</selector>
